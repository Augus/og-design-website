				.double-bounce1
				.double-bounce2
			img(ng-if="current == porfolio", ng-src="{{porfolio.full.url}}", ng-class="{'show': porfolio.full && isOpenPlayer}")
		.others(ng-click="$event.stopPropagation()")
			.gallery
				.row
					.col-md-3(ng-repeat="porfolio in porfolios"): a(ng-click="openPlayer(porfolio, $index)")
						.project(ng-class="{'active': current == porfolio}")
							.thumb(style="background-image: url({{porfolio.cover.url}})")
							.title {{porfolio.title}}



